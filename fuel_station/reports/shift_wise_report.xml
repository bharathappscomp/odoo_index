<odoo>

    <record id="action_shift_wise_meter_report" model="ir.actions.report">
        <field name="name">Shift Wise Meter Report</field>
        <field name="model">closing.entry</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fuel_station.report_shift_wise_template</field>
        <field name="report_file">fuel_station.report_shift_wise_template</field>
        <field name="print_report_name">'Shift Wise Meter Report'</field>
    </record>


    <template id="report_shift_wise_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">

                    <h3>Shift Wise Meter Reading Report</h3>
                    <p>
                        Period:
                        <strong>
                            <t t-esc="start_date"/>
                        </strong>
                        to
                        <strong>
                            <t t-esc="end_date"/>
                        </strong>
                    </p>

                    <t t-foreach="shift_data.items()" t-as="shift">
                        <h4 class="mt-4">
                            Shift :
                            <t t-esc="shift[0]"/>
                        </h4>

                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Pump</th>
                                    <th>Nozzle</th>
                                    <th>Fuel</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Total</th>
                                    <th>Price</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="shift[1]" t-as="line">
                                    <tr>
                                        <td>
                                            <t t-esc="line['date']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['pump']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['nozzle']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['fuel']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['start_reading']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['end_reading']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['total_reading']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['price']"/>
                                        </td>
                                        <td>
                                            <t t-esc="line['amount']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                </div>
            </t>
        </t>
    </template>


</odoo>
