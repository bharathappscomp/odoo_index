<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="fuel_station.meter_reading">
    <div class="o_view_controller fuel_meter_view p-4">
        <div class="o_content">

            <!-- HEADER -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="o_page_title mb-1">
                        Meter Reading Report
                    </h2>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <input type="date"
                           class="form-control form-control-sm"
                           t-model="state.selectedDate"
                           t-on-change="onDateChange"/>

                    <button class="btn btn-primary btn-sm"
                            t-on-click="onPrintPdf">
                        Print PDF
                    </button>
                </div>
            </div>

            <!-- ================= METER TABLE ================= -->
            <div class="card o_card mb-4">
                <div class="card-body p-0">

                    <t t-if="state.loading">
                        <div class="text-center text-muted py-4">
                            Loadingâ€¦
                        </div>
                    </t>

                    <t t-else="">
                        <table class="table o_list_view mb-0 fuel-meter-table">
                            <thead>
                                <tr>
                                    <th>Pump</th>
                                    <th>Nozzle</th>
                                    <th>Fuel</th>
                                    <th class="text-end">Closing</th>
                                    <th class="text-end">Opening</th>
                                    <th class="text-end">Ltrs</th>
                                    <th class="text-end">Rate</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>

                            <tbody>
                                <t t-if="state.lines.length">
                                    <t t-foreach="state.lines" t-as="line"
                                       t-key="line.pump + '-' + line.nozzle">
                                        <tr>
                                            <td><t t-esc="line.pump"/></td>
                                            <td><t t-esc="line.nozzle"/></td>
                                            <td><t t-esc="line.fuel"/></td>
                                            <td class="text-end"><t t-esc="line.closing"/></td>
                                            <td class="text-end"><t t-esc="line.opening"/></td>
                                            <td class="text-end fw-medium"><t t-esc="line.ltrs"/></td>
                                            <td class="text-end"><t t-esc="line.rate"/></td>
                                            <td class="text-end fw-semibold"><t t-esc="line.amount"/></td>
                                        </tr>
                                    </t>

                                    <tr class="fw-semibold fuel-total-row">
                                        <td colspan="5">Total</td>
                                        <td class="text-end">
                                            <t t-esc="state.lines.reduce((s, l) => s + l.ltrs, 0)"/>
                                        </td>
                                        <td></td>
                                        <td class="text-end">
                                            <t t-esc="state.lines.reduce((s, l) => s + l.amount, 0)"/>
                                        </td>
                                    </tr>
                                </t>

                                <t t-else="">
                                    <tr>
                                        <td colspan="8" class="text-center text-muted py-4">
                                            No data for selected date
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                </div>
            </div>

            <!-- ================= SALES SUMMARY ================= -->
            <div class="row g-3">

                <!-- TOTAL SALES -->
                <div class="col-6">
                    <div class="card o_card">
                        <div class="card-header py-2">
                            <strong>Total Sales</strong>
                        </div>
                        <div class="card-body p-0">
                            <table class="table o_list_view mb-0 fuel-summary-table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-end">Ltrs</th>
                                        <th class="text-end">Rate</th>
                                        <th class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="ts_ltrs" t-value="0"/>
                                    <t t-set="ts_amount" t-value="0"/>

                                    <t t-foreach="state.total_sales" t-as="sale" t-key="sale.product">
                                        <t t-set="ts_ltrs" t-value="ts_ltrs + sale.ltrs"/>
                                        <t t-set="ts_amount" t-value="ts_amount + sale.amount"/>
                                        <tr>
                                            <td><t t-esc="sale.product"/></td>
                                            <td class="text-end"><t t-esc="sale.ltrs.toFixed(2)"/></td>
                                            <td class="text-end"><t t-esc="sale.rate"/></td>
                                            <td class="text-end fw-medium"><t t-esc="sale.amount.toFixed(2)"/></td>
                                        </tr>
                                    </t>

                                    <tr class="fw-semibold fuel-total-row">
                                        <td>Total</td>
                                        <td class="text-end"><t t-esc="ts_ltrs.toFixed(2)"/></td>
                                        <td></td>
                                        <td class="text-end"><t t-esc="ts_amount.toFixed(2)"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- CREDIT SALES -->
                <div class="col-6">
                    <div class="card o_card">
                        <div class="card-header py-2">
                            <strong>Credit Sales</strong>
                        </div>
                        <div class="card-body p-0">
                            <table class="table o_list_view mb-0 fuel-summary-table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-end">Qty</th>
                                        <th class="text-end">Rate</th>
                                        <th class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="cs_qty" t-value="0"/>
                                    <t t-set="cs_amount" t-value="0"/>

                                    <t t-foreach="state.credit_sales" t-as="cs" t-key="cs.product">
                                        <t t-set="cs_qty" t-value="cs_qty + cs.qty"/>
                                        <t t-set="cs_amount" t-value="cs_amount + cs.amount"/>
                                        <tr>
                                            <td><t t-esc="cs.product"/></td>
                                            <td class="text-end"><t t-esc="cs.qty"/></td>
                                            <td class="text-end"><t t-esc="cs.rate"/></td>
                                            <td class="text-end fw-medium"><t t-esc="cs.amount.toFixed(2)"/></td>
                                        </tr>
                                    </t>

                                    <tr class="fw-semibold fuel-total-row">
                                        <td>Total</td>
                                        <td class="text-end"><t t-esc="cs_qty"/></td>
                                        <td></td>
                                        <td class="text-end"><t t-esc="cs_amount.toFixed(2)"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</t>

</templates>
