<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="fuel_station.pricing_screen">
    <div class="o_view_controller fuel_pricing_view h-100">
        <div class="o_content d-flex flex-column h-100">

            <!-- INNER WRAPPER -->
            <div class="d-flex flex-column h-100 p-4">

                <!-- HEADER -->
                <div class="d-flex justify-content-between align-items-center mb-4 flex-shrink-0">
                    <div>
                        <h2 class="o_page_title mb-1">
                            Fuel Pricing
                        </h2>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <label class="o_form_label mb-0">
                            Pricing Date
                        </label>
                        <input type="date"
                               class="form-control form-control-sm"
                               t-model="state.pricing_date"/>
                    </div>
                </div>

                <!-- CONTENT -->
                <div class="fuel-pricing-scroll flex-grow-1">

                    <t t-if="state.loading">
                        <div class="text-center text-muted py-5">
                            Loading fuel productsâ€¦
                        </div>
                    </t>

                    <t t-else="">
                        <div class="card o_card fuel-pricing-card mx-auto">
                            <div class="card-body p-0">

                                <table class="table o_list_view mb-0 fuel-pricing-table">
                                    <thead>
                                        <tr>
                                            <th style="width:56px;"></th>
                                            <th>Fuel Product</th>
                                            <th class="text-end" style="width:180px;">
                                                Price / Litre
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <t t-foreach="state.products"
                                           t-as="p"
                                           t-key="p.product_id">

                                            <tr>
                                                <td>
                                                    <img class="rounded-circle"
                                                         width="36"
                                                         height="36"
                                                         alt="product"
                                                         t-att-src="this.getProductImageUrl(p.product_id)"/>
                                                </td>

                                                <td>
                                                    <div class="fw-medium">
                                                        <t t-esc="p.name"/>
                                                    </div>
                                                    <small class="text-muted">
                                                        Fuel Product
                                                    </small>
                                                </td>

                                                <td class="text-end">
                                                    <input type="number"
                                                           class="form-control form-control-sm text-end"
                                                           t-model="p.price"
                                                           step="0.01"/>
                                                </td>
                                            </tr>

                                        </t>
                                    </tbody>
                                </table>
                            </div>

                            <!-- FOOTER -->
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    Verify prices before saving
                                </small>

                                <button class="btn btn-primary btn-sm px-4"
                                        t-on-click="onDoneClick">
                                    Save Prices
                                </button>
                            </div>

                        </div>
                    </t>

                </div>
            </div>
        </div>
    </div>
</t>

</templates>
