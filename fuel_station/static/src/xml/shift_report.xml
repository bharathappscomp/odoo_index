<t t-name="fuel_station.shift_report">
    <div class="o_view_controller fuel_shift_report_view p-4">
        <div class="o_content">

            <!-- HEADER -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="o_page_title mb-1">
                        Shift Wise Report
                    </h2>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <input type="date"
                           class="form-control form-control-sm"
                           t-model="state.start_date"/>

                    <input type="date"
                           class="form-control form-control-sm"
                           t-model="state.end_date"/>

                    <button class="btn btn-primary btn-sm o-nowrap"
                            t-on-click="generateReport">
                        Print PDF
                    </button>
                </div>
            </div>

            <!-- LOADING -->
            <t t-if="state.loading">
                <div class="text-center text-muted py-4">
                    Loading report dataâ€¦
                </div>
            </t>

            <!-- REPORT CONTENT -->
            <t t-if="Object.keys(state.shiftData).length">

                <div class="fuel-shift-scroll">

                    <t t-foreach="Object.entries(state.shiftData)" t-as="shift" t-key="shift[0]">

                        <div class="card o_card mt-3">
                            <div class="card-header py-2">
                                <strong>
                                    Shift : <t t-esc="shift[0]"/>
                                </strong>
                            </div>

                            <div class="card-body p-0">
                                <table class="table o_list_view mb-0 fuel-shift-table">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Pump</th>
                                            <th>Nozzle</th>
                                            <th>Fuel</th>
                                            <th class="text-end">Start</th>
                                            <th class="text-end">End</th>
                                            <th class="text-end">Total</th>
                                            <th class="text-end">Price</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="shift[1]" t-as="line" t-key="line.date + line.nozzle">
                                            <tr>
                                                <td><t t-esc="line.date"/></td>
                                                <td><t t-esc="line.pump"/></td>
                                                <td><t t-esc="line.nozzle"/></td>
                                                <td><t t-esc="line.fuel"/></td>
                                                <td class="text-end"><t t-esc="line.start_reading"/></td>
                                                <td class="text-end"><t t-esc="line.end_reading"/></td>
                                                <td class="text-end fw-medium"><t t-esc="line.total_reading"/></td>
                                                <td class="text-end"><t t-esc="line.price"/></td>
                                                <td class="text-end fw-semibold"><t t-esc="line.amount"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </t>
                </div>
            </t>

            <!-- NO DATA -->
            <t t-if="!Object.keys(state.shiftData).length and !state.loading">
                <div class="text-muted text-center py-4">
                    No data for selected period
                </div>
            </t>

        </div>
    </div>
</t>
