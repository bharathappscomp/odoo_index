<odoo>
    <record id="credit_customer_view" model="ir.ui.view">
        <field name="name">credit.customer.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page name="credit_sales" string="Fuel Station">
                    <group>
                        <field name="is_loyalty_customer" widget="boolean_toggle"/>
                        <field name="is_credit_customer" widget="boolean_toggle"/>
                        <field name="is_default_customer" widget="boolean_toggle"/>
                    </group>
                    <field name="vehicle_line_ids" invisible="not is_credit_customer">
                        <tree editable="bottom">
                            <field name="vehicle" string="Vehicle Number"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>