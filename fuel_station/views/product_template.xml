<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_form_fuel_inherit" model="ir.ui.view">
        <field name="name">product.template.form.fuel.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- Add checkbox under General Information -->
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="is_fuel_product"/>
            </xpath>

        </field>
    </record>

</odoo>
