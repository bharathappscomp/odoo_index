<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_fuel_station_pump_tree" model="ir.ui.view">
        <field name="name">fuel.station.pump.tree</field>
        <field name="model">fuel.station.pump</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fuel_station_pump_form" model="ir.ui.view">
        <field name="name">fuel.station.pump.form</field>
        <field name="model">fuel.station.pump</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <notebook invisible="1">
                        <page string="Pump Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="company_id" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="pump_id"/>
                                    <field name="nozzle_id"/>
                                    <field name="start_reading"/>
                                    <field name="end_reading"/>
                                    <field name="opening_amount" widget='monetary'
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="closing_amount" widget='monetary'
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="employee_id"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fuel_station_pump" model="ir.actions.act_window">
        <field name="name">Pump</field>
        <field name="res_model">fuel.station.pump</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
