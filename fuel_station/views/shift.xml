<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_fuel_station_shift_tree" model="ir.ui.view">
        <field name="name">fuel.station.shift.tree</field>
        <field name="model">fuel.station.shift</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_time" column_invisible="1" widget="float_time"/>
                <field name="end_time" column_invisible="1" widget="float_time"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fuel_station_shift_form" model="ir.ui.view">
        <field name="name">fuel.station.shift.form</field>
        <field name="model">fuel.station.shift</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="company_id" readonly="1"/>
                        <field name="start_time" widget="float_time" invisible="0"/>
                        <field name="end_time" widget="float_time" invisible="0"/>
                        <field name="duration" widget="float_time" invisible="0"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fuel_station_shift" model="ir.actions.act_window">
        <field name="name">Shift</field>
        <field name="res_model">fuel.station.shift</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
