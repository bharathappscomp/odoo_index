<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_fuel_station_tank_tree" model="ir.ui.view">
        <field name="name">fuel.station.tank.tree</field>
        <field name="model">fuel.station.tank</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="capacity_liters" column_invisible="1"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fuel_station_tank_form" model="ir.ui.view">
        <field name="name">fuel.station.tank.form</field>
        <field name="model">fuel.station.tank</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="location_id"/>
                            <field name="capacity_liters" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fuel_station_tank" model="ir.actions.act_window">
        <field name="name">Tank</field>
        <field name="res_model">fuel.station.tank</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>